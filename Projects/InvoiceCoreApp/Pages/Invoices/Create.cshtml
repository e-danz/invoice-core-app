@page
@using InvoiceCoreApp.Models
@model InvoiceCoreApp.Pages.Invoices.CreateModel
@{
    ViewData["Title"] = "Create Invoice";
}

<h1>Create Invoice</h1>
<form method="post">
    <div class="mb-3">
        <label asp-for="Invoice.Description" class="form-label fw-bold"></label>
        <input asp-for="Invoice.Description" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Invoice.DueDate" class="form-label fw-bold"></label>
        <input asp-for="Invoice.DueDate" class="form-control" type="date" />
    </div>
    <div class="mb-3">
        <label asp-for="Invoice.Supplier" class="form-label fw-bold"></label>
        <input asp-for="Invoice.Supplier" class="form-control" />
    </div>
    <h4>Invoice Lines</h4>
    <div id="lines">
        <div class="row mb-2 fw-bold">
            <div class="col">Description</div>
            <div class="col">Price</div>
            <div class="col">Quantity</div>
            <div class="col"></div>
        </div>
        @for (var i = 0; i < Model.Invoice.InvoiceLines.Count; i++)
        {
            <div class="row mb-2">
                <div class="col">
                    <input asp-for="Invoice.InvoiceLines[@i].Description" class="form-control"
                        placeholder="Description" />
                </div>
                <div class="col">
                    <input asp-for="Invoice.InvoiceLines[@i].Price" class="form-control" placeholder="Price"
                        type="number" step="0.01" />
                </div>
                <div class="col">
                    <input asp-for="Invoice.InvoiceLines[@i].Quantity" class="form-control" placeholder="Quantity"
                        type="number" />
                </div>
                <div class="col">
                    <button type="submit" asp-page-handler="RemoveLine" asp-route-index="@i" class="btn btn-danger btn-sm">Delete</button>
                </div>
            </div>
        }
        <button type="submit" asp-page-handler="AddLine" class="btn btn-secondary btn-sm mt-2 mb-4">Add Line</button>
    </div>
    <div class="mb-4"></div>
    <button type="submit" asp-page-handler="Save" class="btn btn-primary">Create</button>
    <a class="btn btn-secondary" asp-page="Index">Cancel</a>
</form>
