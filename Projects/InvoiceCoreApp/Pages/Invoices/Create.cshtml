@page
@using InvoiceCoreApp.Models
@model InvoiceCoreApp.Pages.Invoices.CreateModel
@{
    ViewData["Title"] = "Create Invoice";
}

<h1>Create Invoice</h1>
<form method="post">
    <div class="mb-3">
        <label asp-for="Invoice.Description" class="form-label"></label>
        <input asp-for="Invoice.Description" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Invoice.DueDate" class="form-label"></label>
        <input asp-for="Invoice.DueDate" class="form-control" type="date" />
    </div>
    <div class="mb-3">
        <label asp-for="Invoice.Supplier" class="form-label"></label>
        <input asp-for="Invoice.Supplier" class="form-control" />
    </div>
    <h4>Invoice Lines</h4>
    <div id="lines">
        @for (int i = 0; i < Model.Invoice.InvoiceLines.Count; i++)
        {
            <div class="row mb-2">
                <div class="col">
                    <input asp-for="Invoice.InvoiceLines[@i].Description" class="form-control" placeholder="Description" />
                </div>
                <div class="col">
                    <input asp-for="Invoice.InvoiceLines[@i].Price" class="form-control" placeholder="Price" type="number" step="0.01" />
                </div>
                <div class="col">
                    <input asp-for="Invoice.InvoiceLines[@i].Quantity" class="form-control" placeholder="Quantity" type="number" />
                </div>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a class="btn btn-secondary" asp-page="Index">Cancel</a>
</form>
