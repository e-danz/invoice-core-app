@page
@model InvoiceCoreApp.Pages.Invoices.IndexModel
@{
    ViewData["Title"] = "Invoices";
}

<h1>Invoices</h1>
<a class="btn btn-primary mb-2" asp-page="Create">Add New Invoice</a>
<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Due Date</th>
            <th>Supplier</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var invoice in Model.Invoices)
    {
        <tr>
            <td>@invoice.Description</td>
            <td>@invoice.DueDate.ToShortDateString()</td>
            <td>@invoice.Supplier</td>
            <td>
                <a class="btn btn-info btn-sm" asp-page="Details" asp-route-id="@invoice.Id">Details</a>
            </td>   
        </tr>
    }
    </tbody>
</table>
