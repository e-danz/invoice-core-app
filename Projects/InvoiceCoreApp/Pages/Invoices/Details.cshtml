@page "{id:int}"
@model InvoiceCoreApp.Pages.Invoices.DetailsModel
@{
    ViewData["Title"] = "Invoice Details";
}

<h1>Invoice Details</h1>
@if (Model.Invoice == null)
{
    // Defensive
    <div class="alert alert-danger">Invoice not found.</div>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Invoice.Description</dd>
        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.Invoice.DueDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Supplier</dt>
        <dd class="col-sm-10">@Model.Invoice.Supplier</dd>
    </dl>
    <h4>Invoice Lines</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var line in Model.Invoice.InvoiceLines)
        {
            <tr>
                <td>@line.Description</td>
                <td>@line.Price</td>
                <td>@line.Quantity</td>
            </tr>
        }
        </tbody>
    </table>
    <a class="btn btn-secondary" asp-page="Index">Back to List</a>
}
    